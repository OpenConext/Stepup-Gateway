{% set current_route = app.request.attributes.get( '_route' ) %}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">

    <link rel="shortcut icon" href="/favicon.ico">

    <title>
        {% block page_title%}
        {% endblock page_title%}
        {%  if block('page_title') is not empty %}{{ block('page_title') }} &mdash; {% endif %}
        {% block title %}Stepup Gateway{% endblock %}
    </title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('global') }}
    {% endblock %}
</head>
{% block body_tag %}
<body>
{% endblock body_tag %}

{% block flashes %}
    {% if app.session.flashbag.peekAll|length > 0 %}
        <div class="row">
            <div id="flash" class="col-12">
                {% for type, messages in app.session.flashbag.all() %}
                    {% for message in messages %}
                        <div class="alert alert-{{ type }} alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert"><span
                                        aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            {{ message | trans }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
    {% endif %}
{% endblock flashes %}
<div class="{% block container_class %}container{% endblock container_class %}">
    {% block head_bottom %}
        <base href="{{ app.request.schemeAndHttpHost ~ app.request.baseUrl }}">
    {% endblock head_bottom %}


    {% block header %}
    {% endblock header %}

    {% block page_header %}
        <div class="page-header clearfix">
            <img src="/images/header-logo.png" class="float-right logo" alt="OpenConext Stepup">
        </div>
    {% endblock page_header %}


    <div class="main-content">
        {% block content_row %}
            {% block content %}
            {% endblock content %}
        {% endblock content_row %}
    </div>

    {% block footer %}
        <hr>
        <ul class="nav nav-pills">
            <li class="nav-item"><a class="nav-link" href="{{ global_view_parameters.supportUrl }}" target="_blank">Help</a></li>
        </ul>
    {% endblock footer %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</div>
</body>
</html>

