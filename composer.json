{
    "name": "surfnet/stepup-gateway",
    "license": "Apache-2.0",
    "description": "The SURFnet Step-up Gateway sits between a SAML Service Provider and Identity Provider and can provide a certain Level of Assurance by performing second-factor authentication.",
    "autoload": {
        "psr-4": {
            "Surfnet\\": "src\\Surfnet",
            "Surfnet\\StepupGateway\\Behat\\": [
                "tests/src"
            ]
        },
        "classmap": [
            "src/Kernel.php",
            "tests/features/bootstrap/FeatureContext.php",
            "tests/features/bootstrap/MinkContext.php",
            "tests/features/bootstrap/ServiceProviderContext.php"
        ]
    },
    "minimum-stability": "stable",
    "require": {
        "php": "^8.2",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "beberlei/assert": "^3.3.3",
        "doctrine/annotations": "^2.0",
        "doctrine/common": "^3.5.0",
        "doctrine/dbal": "^3.10.3",
        "doctrine/doctrine-bundle": "^2.18.1",
        "doctrine/orm": "^3.5.7",
        "graylog2/gelf-php": "^2.0.2",
        "incenteev/composer-parameter-handler": "^2.2",
        "jms/translation-bundle": "^2.6",
        "nelmio/security-bundle": "^3.6",
        "openconext/monitor-bundle": "^4.3.1",
        "paragonie/halite": "^5.1.4",
        "psr/container": "^2.0.2",
        "spryng/rest-api-php": "^1.1",
        "surfnet/stepup-bundle": "^7.0",
        "surfnet/yubikey-api-client-bundle": "^6.0",
        "symfony/config": "7.3.*",
        "symfony/console": "7.3.*",
        "symfony/expression-language": "7.4.*",
        "symfony/flex": "^2.10.0",
        "symfony/form": "7.3.*",
        "symfony/http-foundation": "7.4.*",
        "symfony/monolog-bundle": "^3.10",
        "symfony/runtime": "7.4.*",
        "symfony/security-bundle": "7.3.*",
        "symfony/translation": "7.3.*",
        "symfony/twig-bundle": "7.3.*",
        "symfony/webpack-encore-bundle": "^2.3",
        "twig/extra-bundle": "^3.22.1",
        "twig/twig": "^3.22.0",
        "webmozart/assert": "^1.12.1"
    },
    "require-dev": {
        "behat/behat": "^3.26",
        "behat/mink": "^1.12",
        "behat/mink-browserkit-driver": "^2.2",
        "dmore/behat-chrome-extension": "^1.4",
        "dmore/chrome-mink-driver": "2.9.*",
        "friends-of-behat/mink-extension": "^2.7.5",
        "friends-of-behat/symfony-extension": "^2.6.2",
        "irstea/phpcpd-shim": "^6.0.3",
        "malukenho/docheader": "^1.1.0",
        "matthiasnoback/symfony-config-test": "^6.1",
        "mockery/mockery": "^1.6.12",
        "overtrue/phplint": ">=9.6.2",
        "phpmd/phpmd": "^2.15",
        "phpstan/extension-installer": "^1.4.3",
        "phpstan/phpstan": "^2.1.32",
        "phpstan/phpstan-deprecation-rules": "^2.0.3",
        "phpstan/phpstan-doctrine": "^2.0.11",
        "phpstan/phpstan-mockery": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0.8",
        "phpstan/phpstan-symfony": "^2.0.8",
        "phpunit/phpunit": "^10.5.58",
        "ramsey/uuid": "^4.9.1",
        "rector/rector": "^2.2.8",
        "sebastian/exporter": "^5.1.4",
        "slevomat/coding-standard": "^8.24",
        "squizlabs/php_codesniffer": "^4.0.1",
        "symfony/browser-kit": "7.3.*",
        "symfony/phpunit-bridge": "^7.3.4",
        "symfony/web-profiler-bundle": "7.3.*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "@auto-scripts"
        ],
        "check": [
            "@check-ci",
            "@eslint",
            "@rector"
        ],
        "check-ci": [
            "@phplint",
            "@phpcpd",
            "@validate-lockfile",
            "@license-headers",
            "@phpstan",
            "@phpcs",
            "@phpmd",
            "@dsv",
            "@test",
            "@behat",
            "@behat-functional"
        ],
        "phplint": "./ci/qa/phplint",
        "validate-lockfile": "./ci/qa/validate",
        "phpcs": "./ci/qa/phpcs",
        "phpcpd": "./ci/qa/phpcpd",
        "phpcbf": "./ci/qa/phpcbf",
        "phpstan": "./ci/qa/phpstan",
        "phpmd": "./ci/qa/phpmd",
        "behat": "./ci/qa/behat",
        "behat-functional": "./ci/qa/behat-functional",
        "test": "./ci/qa/phpunit",
        "license-headers": "./ci/qa/docheader",
        "rector":  "./ci/qa/rector.sh --dry-run",
        "rector-fix":  "./ci/qa/rector.sh",
        "dsv": "./bin/console doctrine:schema:validate --skip-sync",
        "eslint": "yarn eslint public/typescript",
        "frontend-install": [
          "yarn install --frozen-lockfile",
          "yarn encore production",
          "./bin/console cache:clear",
          "@fix-dev-permissions"
        ],
        "fix-dev-permissions": [
          "chown -R www-data:www-data /var/www/html/var/log",
          "chown -R www-data:www-data /var/www/html/var/cache"
        ],
        "security-tests": [
            "composer audit",
            "yarn audit"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "endroid/installer": true,
            "phpstan/extension-installer": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "8.2"
        }
    },
    "archive": {
        "exclude": [
            "*",
            ".*",
            "!/.env",
            "*/Tests/*",
            "!/bin",
            "!/component_info",
            "!/config",
            "!/migrations",
            "!/public",
            "!/src",
            "!/templates",
            "!/translations",
            "!/var/cache/prod",
            "!/vendor"
        ]
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.3.*"
        },
        "symfony-assets-install": "relative",
        "incenteev-parameters": [
            {
                "file": "config/openconext/parameters.yaml"
            },
            {
                "file": "config/openconext/samlstepupproviders_parameters.yaml"
            },
            {
                "file": "config/openconext/global_view_parameters.yaml"
            }
        ],
        "phpstan/extension-installer": {
          "ignore": [
            "surfnet/stepup-bundle",
            "surfnet/stepup-saml-bundle"
          ]
        }
    },
    "type": "project",
    "prefer-stable": true
}
