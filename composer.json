{
    "name": "surfnet/stepup-gateway",
    "license": "Apache-2.0",
    "description": "The SURFnet Step-up Gateway sits between a SAML Service Provider and Identity Provider and can provide a certain Level of Assurance by performing second-factor authentication.",
    "autoload": {
        "psr-4": {
            "Surfnet\\": "src\\Surfnet",
            "Surfnet\\StepupGateway\\Behat\\": [
                "tests/src"
            ]
        },
        "classmap": [
            "src/Kernel.php"
        ]
    },
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "beberlei/assert": "^3.0",
        "doctrine/cache": "^2.0",
        "doctrine/common": "^3.4.3",
        "doctrine/dbal": "^3.5",
        "doctrine/doctrine-bundle": "^2.0",
        "doctrine/orm": "^2.5",
        "graylog2/gelf-php": "^2",
        "incenteev/composer-parameter-handler": "^2.0",
        "jms/translation-bundle": "^1.7",
        "nelmio/security-bundle": "^2",
        "openconext/monitor-bundle": "^3.0",
        "paragonie/halite": "^5",
        "sensio/framework-extra-bundle": "^5.0",
        "spryng/rest-api-php": "^1.1",
        "surfnet/stepup-bundle": "^5.0",
        "surfnet/yubikey-api-client-bundle": "^4.0.0",
        "symfony/config": "4.4.*",
        "symfony/console": "4.4.*",
        "symfony/dotenv": "4.4.*",
        "symfony/expression-language": "4.4.*",
        "symfony/flex": "^1.8",
        "symfony/form": "4.4.*",
        "symfony/http-foundation": "^5.0",
        "symfony/monolog-bundle": "^3.0",
        "symfony/security-bundle": "4.4.*",
        "symfony/translation": "4.4.*",
        "symfony/twig-bundle": "4.4.*",
        "symfony/webpack-encore-bundle": "^1.8",
        "twig/extensions": "^1.5",
        "twig/extra-bundle": "^2.12|^3.0",
        "twig/twig": "^2",
        "webmozart/assert": "^1.2"
    },
    "require-dev": {
        "malukenho/docheader": "^0.1.8 || ^1.0.0",
        "matthiasnoback/symfony-config-test": "^4",
        "mockery/mockery": "^1.0",
        "overtrue/phplint": "^1.2",
        "phpmd/phpmd": "^2.6",
        "phpstan/phpstan-doctrine": "^1.3",
        "phpstan/phpstan-symfony": "^1.3",
        "phpunit/phpunit": "^8 | ^9.0",
        "ramsey/uuid": "^3.9",
        "rector/rector": "^1.0",
        "sebastian/exporter": "^4.0",
        "sebastian/phpcpd": "^6.0",
        "squizlabs/php_codesniffer": "^3.4",
        "symfony/phpunit-bridge": "^5.0",
        "symfony/web-profiler-bundle": "4.4.*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "@auto-scripts"
        ],
        "check": [
            "@phplint",
            "@validate-lockfile",
            "@license-headers",
            "@phpstan",
            "@phpcs",
            "@phpmd",
            "@test",
            "@behat",
            "@behat-selenium"
        ],
        "phplint": "./ci/qa/phplint",
        "validate-lockfile": "./ci/qa/validate",
        "phpcs": "./ci/qa/phpcs",
        "phpcbf": "./ci/qa/phpcbf",
        "phpstan": "./ci/qa/phpstan",
        "phpmd": "./ci/qa/phpmd",
        "behat": "./ci/qa/behat",
        "behat-selenium": "./ci/qa/behat-selenium",
        "test": "./ci/qa/phpunit",
        "license-headers": "./ci/qa/docheader",
        "frontend-install": [
            "yarn install --frozen-lockfile",
            "yarn encore production"
        ],
        "security-tests": [
            "composer audit",
            "yarn audit"
        ]
    },
    "config": {
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "8.2"
        }
    },
    "archive": {
        "exclude": [
            "*",
            ".*",
            "!/.env",
            "*/Tests/*",
            "!/bin",
            "!/component_info",
            "!/config",
            "!/migrations",
            "!/public",
            "!/src",
            "!/templates",
            "!/translations",
            "!/var/cache/prod",
            "!/vendor"
        ]
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.4.*"
        },
        "symfony-assets-install": "relative",
        "incenteev-parameters": [
            {
                "file": "config/openconext/parameters.yaml"
            },
            {
                "file": "config/openconext/samlstepupproviders_parameters.yaml"
            },
            {
                "file": "config/openconext/global_view_parameters.yaml"
            }
        ]
    }
}
