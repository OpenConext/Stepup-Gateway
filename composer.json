{
    "name": "surfnet/stepup-gateway",
    "license": "Apache-2.0",
    "description": "The SURFnet Step-up Gateway sits between a SAML Service Provider and Identity Provider and can provide a certain Level of Assurance by performing second-factor authentication.",
    "autoload": {
        "psr-4": {
            "Surfnet\\": "src\\Surfnet"
        },
        "classmap": [
            "src/Kernel.php"
        ]
    },
    "minimum-stability": "stable",
    "require": {
        "php": "~7.2",
        "beberlei/assert": "^2.0",
        "doctrine/cache": "~1.4",
        "doctrine/common": "~2.5",
        "doctrine/dbal": "~2.5",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/doctrine-migrations-bundle": "^1.1",
        "doctrine/migrations": "~1.4",
        "doctrine/orm": "~2.5",
        "graylog2/gelf-php": "^1.5",
        "incenteev/composer-parameter-handler": "~2.0",
        "jms/translation-bundle": "^1.3.0",
        "nelmio/security-bundle": "^2",
        "openconext/monitor-bundle": "^2.0",
        "sensio/framework-extra-bundle": "^5.0",
        "surfnet/messagebird-api-client-bundle": "^4.0",
        "surfnet/stepup-bundle": "^4.0",
        "surfnet/stepup-saml-bundle": "^4.1",
        "surfnet/stepup-u2f-bundle": "^4",
        "surfnet/yubikey-api-client-bundle": "^4.0.0",
        "symfony/console": "4.4.*",
        "symfony/dotenv": "4.4.*",
        "symfony/expression-language": "4.4.*",
        "symfony/flex": "^1.8",
        "symfony/form": "4.4.*",
        "symfony/monolog-bundle": "^3.0",
        "symfony/security-bundle": "4.4.*",
        "symfony/swiftmailer-bundle": "^3.1",
        "symfony/translation": "4.4.*",
        "symfony/twig-bundle": "4.4.*",
        "symfony/web-profiler-bundle": "4.4.*",
        "symfony/webpack-encore-bundle": "^1.8",
        "twig/extensions": "^1.5",
        "twig/extra-bundle": "^2.12|^3.0",
        "twig/twig": "^2",
        "webmozart/assert": "^1.2"
    },
    "require-dev": {
        "behat/behat": "^3.6",
        "behat/mink": "^1.8",
        "behat/mink-extension": "^2.3",
        "behat/mink-goutte-driver": "^1.2",
        "friends-of-behat/symfony-extension": "^2.0",
        "malukenho/docheader": "^0.1.7",
        "matthiasnoback/symfony-config-test": "^4",
        "mockery/mockery": "~1.0",
        "overtrue/phplint": "^1.2",
        "phpmd/phpmd": "^2.6",
        "phpunit/phpunit": "^8",
        "sebastian/exporter": "^3.0",
        "sebastian/phpcpd": "^2.0",
        "sensiolabs/security-checker": "^6.0",
        "squizlabs/php_codesniffer": "^3.4",
        "symfony/phpunit-bridge": "^3.0"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "security-checker security:check": "script"
        },
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "@auto-scripts"
        ],
        "check": [
            "@phplint",
            "@phpcs",
            "@phpmd",
            "@test",
            "@behat",
            "@security",
            "@yarn-audit"
        ],
        "security": "./ci/qa/security",
        "phplint": "./ci/qa/phplint",
        "phpcs": "./ci/qa/phpcs",
        "phpcbf": "./ci/qa/phpcbf",
        "phpmd": "./ci/qa/phpmd",
        "behat": "./ci/qa/behat",
        "test": "./ci/qa/phpunit",
        "license-headers": "vendor/bin/docheader check src/",
        "yarn-audit": "yarn audit",
        "frontend-install": [
            "yarn install --frozen-lockfile",
            "yarn encore production"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "7.2"
        }
    },
    "archive": {
        "exclude": [
            "*",
            ".*",
            "*/Tests/*",
            "!/bin",
            "!/component_info",
            "!/config",
            "!/migrations",
            "!/public",
            "!/src",
            "!/templates",
            "!/translations",
            "!/var/cache/prod",
            "!/vendor"
        ]
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.4.*"
        },
        "symfony-assets-install": "relative",
        "incenteev-parameters": [
            {
                "file": "config/legacy/parameters.yaml"
            },
            {
                "file": "config/legacy/samlstepupproviders_parameters.yaml"
            },
            {
                "file": "config/legacy/global_view_parameters.yaml"
            }
        ]
    }
}
